<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanerFrontEnd.MainPage">

    <ScrollView>
        <ListView HasUnevenRows="True" SeparatorVisibility="None" SelectionMode="None" ItemsSource="{Binding tasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="20" VerticalOptions="Center">
                            <Frame CornerRadius="40" BackgroundColor="DarkMagenta" HorizontalOptions="Fill">
                                <Label Text="{Binding sName}"
                                    TextColor="White"
                                    FontSize="18"
                                    FontAttributes="Bold" 
                                    HorizontalTextAlignment="Center"/>
                            </Frame>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>


</ContentPage>
